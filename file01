import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        Nums n = new Nums();

        System.out.println("Write one number: ");
        n.num1 = sc.nextInt();

        System.out.println("Write another number: ");
        n.num2 = sc.nextInt();

        System.out.println("Choose what you want to do with the 2 numbers:\n[1] Addition\n[2] Subtraction\n[3] Multiplication\n[4] Divison");

        int calc = sc.nextInt();

            switch (calc){
                case 1:
                    double add = n.num1 + n.num2;
                    System.out.println("The addition result: "+ add);
                    break;

                case 2:
                    double sub = n.num1 - n.num2;
                    System.out.println("The subtration result: "+ sub);
                    break;

                case 3:
                    double mult = n.num1 * n.num2;
                    System.out.println("The multiplication result: "+ mult );
                    break;

                case 4:
                    double div = n.num1 / n.num2;
                    System.out.println("The division result: "+ div );
                    break;


            }








    }
}
